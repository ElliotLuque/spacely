    <ItemGroup>
        <ProjectReference Include="..\..\src\ReservationSystem\ReservationSystem.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.4"/>
